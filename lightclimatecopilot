    name: Bevegelsessensor
    description: Motion/binary_sensor som blir 'on' ved bevegelse
    selector:
      entity:
        domain: binary_sensor
        device_class: motion

  light_entity:
    name: Lys (dimmer)
    description: Velg lysentitet eller lysgruppe
    selector:
